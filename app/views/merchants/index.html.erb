<h1>Merchants</h1>
<% if @merchants.any? %>
	<table class="table table-hover">
		<thead>
			<th>Name</th>
			<th>Address</th>
		</thead>
		<tbody>
			<% @merchants.each do |merchant| %>
				<tr>
					<%= render merchant %>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>There are no Merchants</p>
<% end %>