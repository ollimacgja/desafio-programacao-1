<!DOCTYPE html>
<html>
<head>
  <title>Desafio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container-fluid">
  <div class="col-md-10 col-md-offset-1">
    <%= nav_bar do %>
      <% if current_user %>
        <%= menu_group do %>
            <%= menu_item "Uploads", uploads_path %>
            <%= menu_item "Itens", itens_path %>
            <%= menu_item "Merchants", merchants_path %>
            <%= menu_item "Purchases", purchases_path %>
            <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
          <% end %>
      <% end %>
    <% end %>
    <%= bootstrap_flash %>
    <%= yield %>
  </div>
</div>

</body>
</html>
